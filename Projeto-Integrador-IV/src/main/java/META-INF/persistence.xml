<?xml version="1.0" encoding="UTF-8"?>

    <persistence version="2.0"
        xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
            http://java.sun.com/xml/ns/persistence
            http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
        <persistence-unit name="bela_agenda">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <!-- map your classes. -->
    
    <class>br.com.belaAgenda.infra.base.model.EntityBase</class>
    <class>br.com.belaAgenda.infra.base.model.EntityId</class>
    <class>br.com.belaAgenda.infra.base.model.ChaveValor</class>
    <class>br.com.belaAgenda.model.sys.Usuario</class>
    <class>br.com.belaAgenda.model.glb.Cliente</class>
    <class>br.com.belaAgenda.model.glb.Contato</class>
    <class>br.com.belaAgenda.model.glb.Endereco</class>
    <class>br.com.belaAgenda.model.glb.Pessoa</class>
    <class>br.com.belaAgenda.model.glb.PessoaFisica</class>
    <class>br.com.belaAgenda.model.rh.Funcionario</class>
    <class>br.com.belaAgenda.model.svc.Agenda</class>
    <class>br.com.belaAgenda.model.svc.Atendimento</class>
    <class>br.com.belaAgenda.model.svc.Servico</class>
    
    <!-- converter -->
    <class>br.com.belaAgenda.infra.util.LocalDateTimePersistenceConverter</class>
    <class>br.com.belaAgenda.infra.util.LocalDatePersistenceConverter</class>
    
    <properties>
    <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
    <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/bela_agenda"/>
    <property name="javax.persistence.jdbc.user" value="root" />
    <property name="javax.persistence.jdbc.password" value="1234" />
    <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
    <property name="hibernate.hbm2ddl.auto" value="update" />
    <property name="hibernate.show_sql" value="true" />
    </properties>
        </persistence-unit>
    </persistence>